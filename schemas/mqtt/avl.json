{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://schema.ruter.no/avl.json",
  "type": "object",
  "title": "AVL MQTT Message",
  "description": "Automatic Vehicle Location",
  "required": [
    "eventTimestamp",
    "seqNumber",
    "latitude",
    "longitude",
    "heading",
    "speedOverGround",
    "signalQuality",
    "numberOfSatellites",
    "gnssType",
    "gnssCoordinateSystem",
    "deadReckoning",
    "positionIsSimulated"
  ],
  "additionalProperties": false,
  "properties": {
    "eventTimestamp": {
      "$id": "#/properties/eventTimestamp",
      "type": "string",
      "description": "EventTimestamp must be ISO 8601 UTC",
      "format": "date-time"
    },
    "seqNumber": {
      "$id": "#/properties/seqNumber",
      "type": "integer",
      "description": "Sequence number"
    },
    "latitude": {
      "$id": "#/properties/latitude",
      "type": "number",
      "description": "Latitude",
      "minimum": -90.0000,
      "maximum": 90.0000
    },
    "longitude": {
      "$id": "#/properties/longitude",
      "type": "number",
      "description": "Longitude",
      "minimum": -180.0000,
      "maximum": 180.0000
    },
    "heading": {
      "$id": "#/properties/heading",
      "type": "number",
      "description": "Compass heading",
      "minimum": 0.0000,
      "maximum": 360.0000
    },
    "speedOverGround": {
      "$id": "#/properties/speedOverGround",
      "type": "number",
      "description": "Speed over ground",
      "minimum": 0
    },
    "signalQuality": {
      "$id": "#/properties/signalQuality",
      "type": "string",
      "description": "Signal quality",
      "enum": [
        "AGPS",
        "DGPS",
        "ESTIMATED",
        "GPS",
        "NOTVALID",
        "UNKNOWN"
      ]
    },
    "numberOfSatellites": {
      "$id": "#/properties/numberOfSatellites",
      "type": "integer",
      "description": "Number of satellites"
    },
    "gnssType": {
      "$id": "#/properties/gnssType",
      "type": "string",
      "description": "GNSS type",
      "enum": [
        "GPS",
        "GLONASS",
        "GALILEO",
        "BEIDOU",
        "IRNSS",
        "OTHER",
        "DEADRECKONING",
        "MIXEDGNSSTYPES"
      ]
    },
    "gnssCoordinateSystem": {
      "$id": "#/properties/gnssCoordinateSystem",
      "type": "string",
      "description": "GNSS coordinate system",
      "enum": [
        "AGPS",
        "DGPS",
        "ESTIMATED",
        "GPS",
        "NOTVALID",
        "UNKNOWN",
        "CH1903",
        "ETSR89",
        "IERS",
        "NAD27",
        "NAD83",
        "WGS84",
        "WGS72",
        "SGS85",
        "P90"
      ]
    },
    "deadReckoning": {
      "$id": "#/properties/deadReckoning",
      "type": "boolean",
      "description": "Dead reckoning was used to calculate the new position"
    },
    "positionIsSimulated": {
      "$id": "#/properties/positionIsSimulated",
      "type": "boolean",
      "description": "The position is simulated"
    }
  }
}